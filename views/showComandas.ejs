<%- include ("header") %>
    <div class="container">
        <h1>Tabla Comandas</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-6">Nombre</th>
                    <th class="col-6">Email</th>
                    <th class="col-6">Product name</th>
                </tr>
            </thead>
            <tbody>
                <% comandas.forEach((comanda, index)=> { %>
                    <tr>
                        <td class="card-title">
                            <%= comanda.UsuarioNombre %>
                        </td>
                        <td class="card-text">
                            <%= comanda.Email %>
                        </td>
                        <td class="card-text">
                            <%= comanda.ProductName %>

                        </td>
                        <td>
                            <a href="/comandesUpdate?ID=<%= comanda.ID %>" class="btn btn-primary">update Persona</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

    </div>
    <%- include ("footer") %>