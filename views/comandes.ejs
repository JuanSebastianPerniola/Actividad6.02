        <% productos.forEach((producto, index) => { %>
            <option value="<%= producto.ID %>">
                <%= producto.Nombre %>
            </option>
        <% }) %>
    </select>
    <button type="submit" class="btn btn-dark">Env√≠alo pana</button>
</form>
